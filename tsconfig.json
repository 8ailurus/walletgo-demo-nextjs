{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Default",
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "lib": ["dom", "ES2015"],
    "module": "ESNext",
    "target": "ES6",
    "baseUrl": ".",
    "rootDir": ".",
    "jsx": "preserve",
    "noEmit": true,
    "esModuleInterop": true,
    "incremental": true,
    "allowJs": true,
    "resolveJsonModule": true
  },

  "include": ["next-env.d.ts", "global.d.ts", "**/*.ts", "**/*.tsx", "next.config.js"],
  "exclude": ["node_modules"]
}
